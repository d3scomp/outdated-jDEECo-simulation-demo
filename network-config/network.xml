<config>
<interface hosts='node[0..1]' names='nic80211' address='192.168.1.x' netmask='255.255.255.x'/>
<interface hosts='node[2..3]' names='nic80211' address='192.168.2.x' netmask='255.255.255.x'/>
<interface hosts='router[0] router[1]' names='eth*' address='192.168.3.x' netmask='255.255.255.x'/>
<interface hosts='router[0]' names='wlan*' address='192.168.1.x' netmask='255.255.255.x'/>
<interface hosts='router[1]' names='wlan*' address='192.168.2.x' netmask='255.255.255.x'/>

<route hosts="node[0] node[1]" destination="*" netmask="*" gateway="router[0]" interface="nic80211"/>
<route hosts="node[2] node[3]" destination="*" netmask="*" gateway="router[1]" interface="nic80211"/>

<route hosts="router[0]" destination='192.168.2.0' netmask='255.255.255.0' gateway="router[1]" interface="eth0"/>
<route hosts="router[1]" destination='192.168.1.0' netmask='255.255.255.0' gateway="router[0]" interface="eth0"/>

<route hosts="router[0]" destination='192.168.1.0' netmask='255.255.255.0' interface="wlan0"/>
<route hosts="router[1]" destination='192.168.2.0' netmask='255.255.255.0' interface="wlan0"/>
</config>